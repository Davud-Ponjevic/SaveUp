<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.AddItemPage"
             xmlns:local="clr-namespace:SaveUp.ViewModels">

    <ContentPage.BindingContext>
        <local:ItemViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Entry Placeholder="Description" Text="{Binding Description}" />
        <Entry Placeholder="Price" Text="{Binding Price}" Keyboard="Numeric" />
        <Button Text="Save Item" Command="{Binding AddItemCommand}" />
    </StackLayout>
</ContentPage>
